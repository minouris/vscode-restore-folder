{
  "name": "minouris-local-history-restore",
  "displayName": "Local History Restore",
  "description": "Restore deleted files and folders from VS Code's local history",
  "version": "1.0.0",
  "publisher": "minouris",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "restore",
    "deleted",
    "files",
    "folders",
    "local history",
    "backup",
    "recovery",
    "undelete"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minouris/vscode-restore-folder.git"
  },
  "bugs": {
    "url": "https://github.com/minouris/vscode-restore-folder/issues"
  },
  "homepage": "https://github.com/minouris/vscode-restore-folder#readme",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minouris-local-history-restore.listDeleted",
        "title": "Refresh",
        "category": "Local History Restore",
        "icon": "$(refresh)"
      },
      {
        "command": "minouris-local-history-restore.restoreSelected",
        "title": "Restore Selected Items",
        "category": "Local History Restore",
        "icon": "$(file-directory)"
      },
      {
        "command": "minouris-local-history-restore.restoreItem",
        "title": "Restore Item",
        "icon": "$(file-add)"
      },
      {
        "command": "minouris-local-history-restore.restoreFolder",
        "title": "Restore Folder",
        "icon": "$(file-add)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "deletedItems",
          "name": "Deleted Items",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "minouris-local-history-restore.listDeleted",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "minouris-local-history-restore.restoreSelected",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "minouris-local-history-restore.listDeleted",
          "when": "view == deletedItems",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "minouris-local-history-restore.restoreItem",
          "when": "view == deletedItems && viewItem == deletedItem",
          "group": "inline@1"
        },
        {
          "command": "minouris-local-history-restore.restoreFolder",
          "when": "view == deletedItems && viewItem == deletedFolder",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
  "test:unit": "NODE_PATH=./test/helpers mocha -r ts-node/register 'src/test/**/*.ts' --exit",
  "test:cov": "NODE_PATH=./test/helpers c8 mocha -r ts-node/register 'src/test/**/*.ts'",
    "package": "npm run compile && node ./scripts/run-vsce-package.js package",
    "package:ci": "npm ci && npm run compile && node ./scripts/run-vsce-package.js package"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.3.8",
    "eslint": "^9.36.0",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "c8": "^8.0.0"
    ,
    "vsce": "^2.10.0"
  }
}
